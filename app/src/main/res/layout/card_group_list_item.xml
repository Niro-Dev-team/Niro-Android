<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="userGroup"
            type="com.niro.niroapp.models.responsemodels.UserGroup" />

        <variable
            name="itemClickListener"
            type="com.niro.niroapp.utils.ItemClickListener" />
    </data>

<androidx.cardview.widget.CardView
    android:id="@+id/cardGroupItem"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeightLarge"
    android:background="@drawable/border">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivGroupImage"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="@color/textSearchBox"
            app:civ_border_width="@dimen/dp_half"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvGroupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_16sdp"
            tools:text="Buyers and Sellers"
            android:ems="12"
            style="@style/cardItemText"
            android:fontFamily="@font/roboto_medium"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@{userGroup.groupName}"
            app:layout_constraintStart_toEndOf="@+id/ivGroupImage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvLastMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_11sdp"
            android:ems="12"
            android:fontFamily="@font/roboto"
            android:textColor="@color/colorTextGreyA7"
            android:textSize="@dimen/_10ssp"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/tvTotalUnreadCount"
            app:layout_constraintStart_toEndOf="@+id/ivGroupImage"
            app:layout_constraintTop_toBottomOf="@+id/tvGroupName"
            tools:text="TextView" />

        <TextView
            android:id="@+id/tvTotalUnreadCount"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            tools:text="20"
            android:background="@drawable/cicular_image_green"
            android:textSize="@dimen/_8ssp"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
</layout>