<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="carbon_Theme.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="title_niro_splash">
        <item name="android:textSize">@dimen/_74ssp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>
    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_rounded_corners</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />
    <style name="header_login_screen_text">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:layout_marginStart">@dimen/_18sdp</item>
        <item name="android:background">@color/colorTransparent</item>
    </style>

    <style name="loginButton" parent="carbon_Button.Colored">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/_23sdp</item>
        <item name="android:layout_marginEnd">@dimen/_23sdp</item>
        <item name="android:layout_height">@dimen/_36sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="carbon_elevation">0dp</item>
        <item name="carbon_cornerRadius">@dimen/_4sdp</item>
    </style>

    <style name="buttonNextStyle" parent="carbon_Button.Colored">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="carbon_elevation">0dp</item>
        <item name="carbon_cornerRadius">@dimen/_4sdp</item>

    </style>


    <style name="buttonAddStyle" parent="carbon_Button.Colored">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="carbon_elevation">0dp</item>
        <item name="carbon_cornerRadius">@dimen/_4sdp</item>

    </style>

    <style name="signupUserDetails">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorBlack</item>
        <item name="android:alpha">0.51</item>
        <item name="carbon_cornerRadius">@dimen/_4sdp</item>
        <item name="android:background">@color/colorSignupEditTextBackgroundWithAlpha</item>
    </style>

    <style name="searchBox" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:background">@drawable/background_search_box</item>
        <item name="android:drawableEnd">@drawable/ic_search_24</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/textSearchBox</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="cardItemText">
        <item name="android:textColor">@color/colorTextCommodityName</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="UserTypeStyle">
        <item name="android:background">@drawable/background_commodity_item</item>
        <item name="android:alpha">0.3</item>

    </style>

    <style name="UserTypeTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>


    <style name="userTransactionDetails">
        <item name="android:background">@drawable/background_orders</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="totalOrdersText">
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontFamily">@font/roboto_bold</item>

    </style>

    <style name="navHeaderText">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="dialog_text">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="backgroundCardContact" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/backgroundCardContact</item>
        <item name="cardCornerRadius">@dimen/dp_4</item>
        <item name="cardElevation">@dimen/dp_2</item>

    </style>


    <style name="editTextForm">

        <item name="android:layout_marginStart">@dimen/_17sdp</item>
        <item name="android:layout_marginEnd">@dimen/_17sdp</item>
        <item name="android:background">@drawable/form_edit_text</item>
        <item name="android:padding">@dimen/dp_10</item>
    </style>

    <style name="formEditTextAppearance">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/textSearchBox</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="tabBuyersTextAppearance">
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="textHeaders">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="rbFilters">
        <item name="android:background">@drawable/background_filters</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>

    <style name="rbFiltersTextAppearance">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="profileDetailText">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:fontFamily">@font/roboto_medium</item>

    </style>

    <style name="ratingBar">
        <item name="colorControlNormal">@color/colorbackgroundGrey</item>
        <item name="colorControlActivated">@color/colorPrimary</item>

    </style>

    <style name="txtPaymentDetails">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="txt_lbl_order_appearance">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/colorTextCommodityName</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="txt_appearance_regular_small">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/colorTextCommodityName</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="mandiRateValuesText">
        <item name="android:textColor">@color/colorTextCommodityName</item>
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>